<% if flash[:notice] %>
  <div class="alert alert-success mt-2 shadow alert-dismissible fade show <%= @container_class %>" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger mt-2 shadow alert-dismissible fade show <%= @container_class %>" role="alert">
    <%= flash[:alert] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
